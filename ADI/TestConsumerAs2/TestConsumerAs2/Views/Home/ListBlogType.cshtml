
@{
    ViewBag.Title = "ListBlogType";
    Layout = "~/Views/Shared/_LayoutConsumer.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('../../Assets/images/img_2.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <span class="post-category text-white bg-success mb-3"> </span>
                    <h1 class="mb-4"><a href="#">DU LỊCH VIỆT NAM</a></h1>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-white">
    <div class="container">
        <div class="row">
            @foreach (var item in ViewBag.dataBlogs)
            {
                <div class="col-lg-4 mb-4">
                    <div class="entry2" style="height:560px;">
                        <a href="@Url.Action("DetailBlog","Home",new { id=item.ID})"><img src="~/UploadFile/@item.Image" style="height:250px;" alt="Image" class="img-fluid rounded"></a>
                        <div class="excerpt" style="padding-left:0px;padding-right:0px">
                            @foreach (var item2 in ViewBag.dataTypeBlogs)
                            {
                                if (item.TypeBlogID == item2.ID)
                                {
                                    <span class="post-category text-white bg-secondary mb-3">@item2.TypeName</span>
                                }
                            }

                            <h2 style="height:70px;overflow:hidden"><a href="@Url.Action("DetailBlog","Home",new { id=item.ID})">@item.Title</a></h2>
                            <div class="post-meta align-items-center text-left clearfix">
                                <figure class="author-figure mb-0 mr-3 float-left"><img src="~/Assets/images/person_1.jpg" alt="Image" class="img-fluid"></figure>
                                @foreach (var item3 in ViewBag.dataUser)
                                {
                                    if (item.UserID == item3.ID)
                                    {
                                        <span class="d-inline-block mt-1">By <a href="#">@item3.UserName</a></span>
                                    }
                                }

                                <span>&nbsp;-&nbsp; July 19, 2019</span>
                            </div>
                            <div style="height: 60px;overflow: hidden">

                                @Html.Raw(item.ContentShort)
                            </div>
                            <p>@Html.ActionLink("Chi Tiết", "DetailBlog", new { id = item.ID })</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row text-center pt-5 border-top">
            <div class="col-md-12">
                <div class="custom-pagination">
                    <span>1</span>
                    <a href="#">2</a>
                    <a href="#">3</a>
                    <a href="#">4</a>
                    <span>...</span>
                    <a href="#">15</a>
                </div>
            </div>
        </div>
    </div>
</div>



